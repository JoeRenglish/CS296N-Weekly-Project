@{
    ViewData["Title"] = "Write a Story";
}
<div class="d-flex justify-content-center">
    
        <form class="form-control p-4">
            <label for="title">Title</label>
            <input type="text" name="title" class="form-control mb-2" placeholder="story title" style="max-width: 300px"/>
            <label for="series">Series</label>
            <input type="text" name="series" class="form-control mb-2" placeholder="name of series" style="max-width: 300px" />
            <textarea name="story" class="form-control mb-2" placeholder="write your story" rows="5"></textarea>
            <button type="submit" class="btn btn-primary">Submit</button>

        </form>
    
</div>